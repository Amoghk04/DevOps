{
  "name": "escapeverse-server",
  "version": "1.0.0",
  "description": "Server for Escapeverse game",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "concurrently \"node server.js\" \"node gamehandle.js\"",
    "dev": "concurrently \"nodemon server.js\" \"nodemon gamehandle.js\"",
    "start:server": "node server.js",
    "start:game": "node gamehandle.js",
    "dev:server": "nodemon server.js",
    "dev:game": "nodemon gamehandle.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "socket.io": "^4.7.2",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}